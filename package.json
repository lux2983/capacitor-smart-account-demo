{
  "name": "capacitor-smart-account-demo",
  "version": "0.2.2",
  "private": true,
  "type": "module",
  "description": "Standalone Capacitor reference app for Smart Account Kit + capacitor-passkey-plugin",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "sync": "npx cap sync && node scripts/patch-ios-spm.mjs",
    "open:ios": "npx cap open ios",
    "open:android": "npx cap open android",
    "verify:ios": "xcodebuild -project ios/App/App.xcodeproj -scheme App -destination 'generic/platform=iOS' CODE_SIGNING_ALLOWED=NO build",
    "verify:android": "cd android && ./gradlew assembleDebug && cd .."
  },
  "dependencies": {
    "@capacitor/core": "8.0.0",
    "@capacitor/preferences": "8.0.0",
    "@stellar/stellar-sdk": "^14.4.3",
    "buffer": "^6.0.3",
    "capacitor-passkey-plugin": "^0.0.5",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "smart-account-kit": "^0.2.9"
  },
  "devDependencies": {
    "@capacitor/android": "8.0.0",
    "@capacitor/cli": "8.0.0",
    "@capacitor/ios": "8.0.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
